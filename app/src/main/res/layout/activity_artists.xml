<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/artist"
    tools:context="com.example.bruno.musicstructureapp.ArtistsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/artist_home_button"
            style="@style/NavigationButton"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="Home" />
        <TextView
            android:id="@+id/artist_playlist_button"
            style="@style/NavigationButton"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="Playlist" />
    </LinearLayout>
    <TextView
        android:id="@+id/artist_name_one"
        style="@style/ArtistName"
        android:background="@drawable/borderlines"
        android:text="Artist Name Placeholder 1" />
    <TextView
        android:id="@+id/artist_name_two"
        style="@style/ArtistName"
        android:background="@drawable/borderlines"
        android:text="Artist Name Placeholder 2"/>
    <TextView
        android:id="@+id/artist_name_three"
        style="@style/ArtistName"
        android:background="@drawable/borderlines"
        android:text="Artist Name Placeholder 3"/>
    <TextView
        android:id="@+id/artist_name_four"
        style="@style/ArtistName"
        android:background="@drawable/borderlines"
        android:text="Artist Name Placeholder 4"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textSize="24sp"
        android:text="This activity contains the names of artists and links to their music pages. Also has a home button and a playlist button to navigate around the app."/>
</LinearLayout>
