<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/artist"
    tools:context="com.example.bruno.musicstructureapp.Albums">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/artist_home_button"
            style="@style/NavigationButton"
            android:background="@color/colorPrimary"
            android:text="Home"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/artist_purchase_button"
            style="@style/NavigationButton"
            android:background="@color/colorPrimary"
            android:text="Purchase Album"
            android:layout_weight="1"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/ActivityBasic"
        android:text="Would display a list of albums belonging to the artist. A button to go back to the home screen and a button to purchase albums."
        />
</LinearLayout>
