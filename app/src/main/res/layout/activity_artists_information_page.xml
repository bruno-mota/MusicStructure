<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/artist"
    android:orientation="vertical"
    tools:context="com.example.bruno.musicstructureapp.ArtistsInformationPage">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/artist_home_button"
            style="@style/NavigationButton"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="Home" />
        <TextView
            android:id="@+id/artist_album_button"
            style="@style/NavigationButton"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="Albums" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textSize="24sp"
        android:text="Contains the information on the clicked artist aswell as buttons to navigate back home and to the artist's albums page."/>
</LinearLayout>
